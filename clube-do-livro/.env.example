# Environment Configuration Example
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_APP_NAME="Clube do Livro"

# Security - NEVER commit real values to version control
REACT_APP_JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
REACT_APP_REFRESH_TOKEN_SECRET=your-refresh-token-secret-key-here-min-32-chars
REACT_APP_ENCRYPTION_KEY=your-encryption-key-here-min-32-chars

# CORS Configuration
REACT_APP_CORS_ORIGIN=https://yourdomain.com

# Rate Limiting
REACT_APP_RATE_LIMIT_WINDOW_MS=900000
REACT_APP_RATE_LIMIT_MAX_REQUESTS=100

# Email Service
REACT_APP_EMAIL_SERVICE_API_KEY=your-email-service-api-key
REACT_APP_EMAIL_FROM_ADDRESS=noreply@yourdomain.com
REACT_APP_EMAIL_FROM_NAME="Clube do Livro"

# WhatsApp Integration
REACT_APP_WHATSAPP_API_KEY=your-whatsapp-api-key
REACT_APP_WHATSAPP_PHONE_NUMBER=+5511999999999

# Hotmart Integration
REACT_APP_HOTMART_API_KEY=your-hotmart-api-key
REACT_APP_HOTMART_WEBHOOK_SECRET=your-hotmart-webhook-secret

# Database (for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/clubedolivro

# Session Configuration
REACT_APP_SESSION_SECRET=your-session-secret-key-here
REACT_APP_SESSION_MAX_AGE=86400000

# HTTPS Configuration (for production)
REACT_APP_FORCE_HTTPS=true
REACT_APP_SECURE_COOKIES=true

# CSRF Protection
REACT_APP_CSRF_SECRET=your-csrf-secret-key-here

# Content Security Policy
REACT_APP_CSP_REPORT_URI=https://yourdomain.com/api/csp-report